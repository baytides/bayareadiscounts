---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
---

<BaseLayout
  title="Partnership Inquiry"
  description="Submit a partnership inquiry to share your program data with Bay Navigator and reach more Bay Area residents."
>
  <!-- Header Section -->
  <section
    class="bg-gradient-to-b from-primary-50 to-white dark:from-neutral-800 dark:to-neutral-900 py-12"
  >
    <div class="container-page">
      <Breadcrumb
        items={[
          { label: 'Partnerships', href: '/partnerships' },
          { label: 'Contact', href: '/partnerships/contact' },
        ]}
      />
      <h1
        class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-white mb-4"
        data-i18n="partnerships.contact.title"
      >
        Partnership Inquiry
      </h1>
      <p
        class="text-lg text-neutral-600 dark:text-neutral-300 max-w-2xl"
        data-i18n="partnerships.contact.subtitle"
      >
        Fill out the form below and we'll get back to you to discuss how we can work together to
        help Bay Area residents.
      </p>
    </div>
  </section>

  <!-- Partnership Inquiry Form -->
  <section class="section">
    <div class="container-page">
      <div class="max-w-2xl mx-auto">
        <form
          id="partnership-form"
          class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-6 md:p-8 space-y-6"
        >
          <!-- Organization Info -->
          <div class="space-y-4">
            <h2
              class="text-lg font-semibold text-neutral-900 dark:text-white flex items-center gap-2"
            >
              <svg
                class="w-5 h-5 text-primary-600 dark:text-primary-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                ></path>
              </svg>
              Organization Information
            </h2>

            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label
                  for="org-name"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
                >
                  Organization Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="org-name"
                  name="orgName"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                  placeholder="Your organization name"
                />
              </div>

              <div>
                <label
                  for="org-url"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
                >
                  Website URL <span class="text-red-500">*</span>
                </label>
                <input
                  type="url"
                  id="org-url"
                  name="orgUrl"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                  placeholder="https://example.org"
                />
              </div>
            </div>

            <div>
              <label
                for="org-type"
                class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
              >
                Organization Type <span class="text-red-500">*</span>
              </label>
              <select
                id="org-type"
                name="orgType"
                required
                class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
              >
                <option value="">Select organization type</option>
                <option value="government">Government Agency</option>
                <option value="nonprofit">Nonprofit Organization</option>
                <option value="community">Community Organization</option>
                <option value="educational">Educational Institution</option>
                <option value="healthcare">Healthcare Provider</option>
                <option value="private">Private Company</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="space-y-4 pt-4 border-t border-neutral-200 dark:border-neutral-700">
            <h2
              class="text-lg font-semibold text-neutral-900 dark:text-white flex items-center gap-2"
            >
              <svg
                class="w-5 h-5 text-primary-600 dark:text-primary-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Point of Contact
            </h2>

            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label
                  for="contact-name"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
                >
                  Your Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="contact-name"
                  name="contactName"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                  placeholder="Full name"
                />
              </div>

              <div>
                <label
                  for="contact-email"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
                >
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="contact-email"
                  name="contactEmail"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                  placeholder="you@example.org"
                />
              </div>
            </div>

            <div>
              <label
                for="contact-phone"
                class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
              >
                Phone Number <span class="text-neutral-600 dark:text-neutral-400">(optional)</span>
              </label>
              <input
                type="tel"
                id="contact-phone"
                name="contactPhone"
                class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                placeholder="(555) 123-4567"
              />
            </div>
          </div>

          <!-- Partnership Details -->
          <div class="space-y-4 pt-4 border-t border-neutral-200 dark:border-neutral-700">
            <h2
              class="text-lg font-semibold text-neutral-900 dark:text-white flex items-center gap-2"
            >
              <svg
                class="w-5 h-5 text-primary-600 dark:text-primary-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
              Partnership Details
            </h2>

            <div>
              <label
                for="partnership-type"
                class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
              >
                How would you like to work with us? <span class="text-red-500">*</span>
              </label>
              <select
                id="partnership-type"
                name="partnershipType"
                required
                class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
              >
                <option value="">Select partnership type</option>
                <option value="api-integration">API Integration (automated data sync)</option>
                <option value="data-submission">Data Submission (spreadsheet/CSV)</option>
                <option value="in-kind-donation">In-Kind Donation (services, resources)</option>
                <option value="funding">Funding or Sponsorship</option>
                <option value="promotion">Cross-Promotion</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1"
              >
                How can your organization benefit the project? <span class="text-red-500">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="4"
                class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors resize-y"
                placeholder="Tell us about your programs, services, or resources that could help Bay Area residents..."
              ></textarea>
            </div>
          </div>

          <!-- Terms Acknowledgment -->
          <div class="pt-4 border-t border-neutral-200 dark:border-neutral-700">
            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                id="terms-agree"
                name="termsAgreed"
                required
                class="mt-1 w-4 h-4 text-primary-600 border-neutral-300 dark:border-neutral-600 rounded focus:ring-primary-500"
              />
              <label for="terms-agree" class="text-sm text-neutral-600 dark:text-neutral-300">
                I have read and agree to the <a
                  href="/partnerships/guidelines"
                  class="text-primary-700 dark:text-primary-300 hover:underline"
                  >Partnership Guidelines</a
                >, including the 501(c)(3) public benefit standards, non-discrimination policy, and
                listing requirements. <span class="text-red-500">*</span>
              </label>
            </div>
          </div>

          <!-- Submit -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full btn-primary py-3 text-lg font-semibold flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              Submit Partnership Inquiry
            </button>

            <p class="text-sm text-neutral-600 dark:text-neutral-300 text-center mt-4">
              By submitting this form, you also agree to our <a
                href="/terms"
                class="text-primary-700 dark:text-primary-300 hover:underline">Terms of Service</a
              > and <a
                href="/privacy"
                class="text-primary-700 dark:text-primary-300 hover:underline">Privacy Policy</a
              >.
            </p>
          </div>

          <!-- Form Status Messages -->
          <div id="form-status" class="hidden"></div>
        </form>

        <!-- Back Link -->
        <div class="mt-8 text-center">
          <a
            href="/partnerships"
            class="inline-flex items-center gap-2 text-primary-700 dark:text-primary-300 hover:underline font-medium"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Partnerships
          </a>
        </div>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('partnership-form') as HTMLFormElement;
    const statusDiv = document.getElementById('form-status') as HTMLDivElement;
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Disable submit button and show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Submitting...
      `;

      // Collect form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch(
          'https://baytides-integrity.azurewebsites.net/api/partnership-form',
          {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          }
        );

        const result = await response.json();

        if (response.ok && result.success) {
          // Success
          statusDiv.className =
            'bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 text-green-800 dark:text-green-200';
          statusDiv.innerHTML = `
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><strong>Thank you!</strong> Your partnership inquiry has been submitted. We'll be in touch soon.</span>
            </div>
          `;
          form.reset();
        } else {
          // Error from API
          const errorMessage =
            result.errors?.join(', ') || result.error || 'Something went wrong. Please try again.';
          throw new Error(errorMessage);
        }
      } catch (error) {
        // Error
        statusDiv.className =
          'bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 text-red-800 dark:text-red-200';
        statusDiv.innerHTML = `
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <span><strong>Error:</strong> ${error instanceof Error ? error.message : 'Something went wrong. Please try again or email us directly.'}</span>
          </div>
        `;
      } finally {
        // Re-enable submit button
        submitBtn.disabled = false;
        submitBtn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
          Submit Partnership Inquiry
        `;
        statusDiv.classList.remove('hidden');
      }
    });
  </script>
</BaseLayout>
