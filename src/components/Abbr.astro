---
/**
 * WCAG 2.2 AAA: 3.1.4 Abbreviations
 * Reusable abbreviation component with built-in definitions
 * for common government program acronyms
 */

interface Props {
  /** The abbreviation text to display */
  abbr: string;
  /** Optional custom title (overrides built-in definitions) */
  title?: string;
}

// Common abbreviations in government benefit programs
const definitions: Record<string, string> = {
  // Food programs
  'SNAP': 'Supplemental Nutrition Assistance Program',
  'WIC': 'Women, Infants, and Children',
  'EBT': 'Electronic Benefits Transfer',
  'CalFresh': 'California Food Stamps Program (SNAP)',

  // Healthcare
  'SSI': 'Supplemental Security Income',
  'SSDI': 'Social Security Disability Insurance',
  'SSA': 'Social Security Administration',
  'CMS': 'Centers for Medicare & Medicaid Services',
  'CHIP': 'Children\'s Health Insurance Program',
  'ACA': 'Affordable Care Act',
  'HHS': 'Department of Health and Human Services',

  // Housing
  'HUD': 'Department of Housing and Urban Development',
  'LIHTC': 'Low-Income Housing Tax Credit',
  'PHA': 'Public Housing Agency',
  'FMR': 'Fair Market Rent',
  'AMI': 'Area Median Income',

  // Utilities & Energy
  'LIHEAP': 'Low Income Home Energy Assistance Program',
  'CARE': 'California Alternate Rates for Energy',
  'FERA': 'Family Electric Rate Assistance',
  'PG&E': 'Pacific Gas and Electric Company',

  // Education
  'FAFSA': 'Free Application for Federal Student Aid',
  'PELL': 'Federal Pell Grant',
  'GED': 'General Educational Development',
  'ESL': 'English as a Second Language',

  // General government
  'IRS': 'Internal Revenue Service',
  'EITC': 'Earned Income Tax Credit',
  'CTC': 'Child Tax Credit',
  'VITA': 'Volunteer Income Tax Assistance',
  'TANF': 'Temporary Assistance for Needy Families',
  'CalWORKs': 'California Work Opportunity and Responsibility to Kids',
  'VA': 'Department of Veterans Affairs',
  'DOL': 'Department of Labor',
  'USDA': 'United States Department of Agriculture',

  // California specific
  'DMV': 'Department of Motor Vehicles',
  'EDD': 'Employment Development Department',
  'UI': 'Unemployment Insurance',
  'SDI': 'State Disability Insurance',
  'PFL': 'Paid Family Leave',
  'Medi-Cal': 'California\'s Medicaid Program',

  // Bay Area specific
  'BART': 'Bay Area Rapid Transit',
  'Muni': 'San Francisco Municipal Transportation Agency',
  'VTA': 'Valley Transportation Authority',
  'AC Transit': 'Alameda-Contra Costa Transit District',
  'SamTrans': 'San Mateo County Transit District',
  'Caltrain': 'Peninsula Corridor Joint Powers Board',

  // Parks & Recreation
  'NPS': 'National Park Service',
  'IMLS': 'Institute of Museum and Library Services',

  // Technology
  'WiFi': 'Wireless Fidelity (Wireless Internet)',
  'ACP': 'Affordable Connectivity Program',
};

const { abbr, title } = Astro.props;

// Use provided title or look up in definitions
const fullTitle = title || definitions[abbr] || abbr;
---

<abbr title={fullTitle}>{abbr}</abbr>
